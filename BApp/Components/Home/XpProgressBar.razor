@page "/xp-progress-bar"

<div class="progress-bar-container">
    <div class="current-level">@CurrentLevel</div>
    <div class="progress-label">@CurrentXp / @TotalXp</div>
    <div class="progress-container">
        @for (int i = 0; i < 10; i++)
        {
            <div class="progress-section" style="background-color: @(i * 10 <= ProgressPercentage ? "#76c7c0" : "grey")" />
        }
    </div>
</div>

@code {
    [Parameter]
    public int CurrentXp { get; set; }

    [Parameter]
    public int TotalXp { get; set; }

    [Parameter]
    public int CurrentLevel { get; set; }

    private double ProgressPercentage => TotalXp > 0 ? (double)CurrentXp / TotalXp * 100 : 0;
}
